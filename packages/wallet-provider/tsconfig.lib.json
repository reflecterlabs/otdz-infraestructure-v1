{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "incremental": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "declarationMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "app",
        "components",
        "hooks",
        "infrastructure"
    ]
}